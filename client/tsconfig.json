{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@faldoria/env": [
        "apps/faldoria/src/environments/environment.ts"
      ],
      "@faldoria/items": [
        "libs/items/src/index.ts"
      ],
      "@faldoria/core": [
        "libs/core/src/index.ts"
      ],
      "@faldoria/actionapi": [
        "libs/actionapi/src/index.ts"
      ],
      "@faldoria/art": [
        "libs/art/src/index.ts"
      ],
      "@faldoria/disguises": [
        "libs/disguises/src/index.ts"
      ],
      "@faldoria/libs/tags/tags": [
        "libs/libs/tags/tags/src/index.ts"
      ],
      "@faldoria/tags": [
        "libs/tags/src/index.ts"
      ]
    }
  },
  "exclude": [
    "wallabyTest.ts",
    "node_modules",
    "tmp"
  ]
}
