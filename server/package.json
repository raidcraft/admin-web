{
  "name": "api",
  "version": "1.0.0",
  "description": "a seed project for creating http service using express written in typescript",
  "main": "app.js",
  "scripts": {
    "test": "jest",
    "start": "npm run dev",
    "prod": "cross-env NODE_ENV=production webpack",
    "dev": "webpack -d --watch",
    "build": "npm run build:dev",
    "build:dev": "webpack --config ./webpack.config.js --progress --profile --color --display-error-details --display-cached && npm run copy-files",
    "build:prod": "cross-env NODE_ENV=production webpack --config ./webpack.config.js  --progress --profile --color --display-error-details --display-cached --bail && npm run copy-files",
    "copy-files": "node copyFiles.js",
    "clean": "npm cache clear && rimraf -- dist"
  },
  "keywords": [],
  "author": "Helmuth Saatkamp",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "config": "^1.30.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "del": "^3.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "express-jwt-authz": "^1.0.0",
    "express-session": "^1.15.6",
    "express-status-monitor": "^1.0.1",
    "helmet": "^3.12.1",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.3.0",
    "jwks-rsa": "^1.3.0",
    "lodash": "^4.17.10",
    "lokijs": "^1.5.5",
    "method-override": "^2.3.10",
    "mongoose": "^5.7.5",
    "morgan": "^1.9.0",
    "multer": "^1.3.0",
    "mysql2": "^1.5.3",
    "rxjs": "^6.2.1",
    "sequelize": "^5.15.1",
    "wicket": "^1.3.3",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@reactivex/rxjs": "^6.2.1",
    "@types/body-parser": "1.17.0",
    "@types/compression": "^0.0.36",
    "@types/config": "^0.0.34",
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "^0.0.30",
    "@types/del": "^3.0.1",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.10",
    "@types/helmet": "^0.0.38",
    "@types/jest": "^23.0.2",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/lodash": "^4.14.109",
    "@types/lokijs": "^1.5.2",
    "@types/method-override": "^0.0.31",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.6",
    "@types/node": "^10.3.2",
    "@types/sequelize": "^4.27.21",
    "@types/supertest": "^2.0.4",
    "@types/webpack": "^4.4.0",
    "cross-env": "^5.1.6",
    "jest": "^23.1.0",
    "nodemon": "^1.17.5",
    "nodemon-webpack-plugin": "^4.0.3",
    "shelljs": "^0.8.2",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.4.1",
    "ts-node": "^6.1.1",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.4",
    "webpack-merge": "^4.1.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(ts|js)x?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.spec.(ts|js)"
    ],
    "testEnvironment": "node"
  }
}
